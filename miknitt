<body>

<div class="header-box">
    <h2 style="margin:0; color:#444;">ğŸ§¶ ç¹”è­œæ—¥èªŒ</h2>
    <div class="tabs">
        <div class="tab active" onclick="switchTab('é‰¤é‡')">é‰¤é‡ (Crochet)</div>
        <div class="tab" onclick="switchTab('æ£’é‡')">æ£’é‡ (Knitting)</div>
    </div>
</div>

<div class="grid" id="project-grid"></div>

<button class="fab" onclick="openAdd()">+</button>

<div id="modal">
    <div class="modal-content">
        <h3 id="m-header">ä½œå“è©³æƒ…</h3>
        <input type="text" id="m-title" placeholder="ä½œå“åç¨±">
        <select id="m-type">
            <option value="é‰¤é‡">é¡åˆ¥ï¼šé‰¤é‡</option>
            <option value="æ£’é‡">é¡åˆ¥ï¼šæ£’é‡</option>
        </select>
        <div id="img-preview-box"></div>
        <input type="file" id="m-img" accept="image/*" onchange="previewImg(this)">
        <textarea id="m-steps" rows="6" placeholder="è£½ä½œæ­¥é©Ÿ (R1, R2...)"></textarea>
        <textarea id="m-notes" rows="4" placeholder="ç·šæã€é‡è™Ÿç­‰å‚™è¨»"></textarea>
        
        <div class="btn-group">
            <button class="btn btn-cancel" onclick="closeModal()">é—œé–‰</button>
            <button class="btn btn-save" onclick="saveData()">å„²å­˜</button>
        </div>
        <button id="del-btn" class="btn btn-del" style="display:none;" onclick="deleteData()">åˆªé™¤ä½œå“</button>
    </div>
</div>

<script>
    let projects = JSON.parse(localStorage.getItem('knit_db_v3')) || [];
    let currentType = 'é‰¤é‡';
    let editingId = null;
    let tempImgBase64 = "";

    function switchTab(type) {
        currentType = type;
        document.querySelectorAll('.tab').forEach(t => t.classList.toggle('active', t.innerText.includes(type)));
        renderWall();
    }

    function renderWall() {
        const grid = document.getElementById('project-grid');
        const list = projects.filter(p => p.type === currentType);
        grid.innerHTML = list.map(p => `
            <div class="card" onclick="openDetail(${p.id})">
                <img src="${p.img || 'https://via.placeholder.com/150?text=No+Image'}" class="card-img">
                <div class="card-info"><div class="card-title">${p.title}</div></div>
            </div>
        `).join('');
    }

    function openAdd() {
        editingId = null;
        tempImgBase64 = "";
        document.getElementById('m-header').innerText = "æ–°å¢ä½œå“";
        document.getElementById('m-title').value = "";
        document.getElementById('m-steps').value = "";
        document.getElementById('m-notes').value = "";
        document.getElementById('img-preview-box').innerHTML = "";
        document.getElementById('del-btn').style.display = 'none';
        document.getElementById('modal').style.display = 'block';
    }

    function openDetail(id) {
        editingId = id;
        const p = projects.find(item => item.id === id);
        document.getElementById('m-header').innerText = "ç·¨è¼¯ä½œå“";
        document.getElementById('m-title').value = p.title;
        document.getElementById('m-type').value = p.type;
        document.getElementById('m-steps').value = p.steps;
        document.getElementById('m-notes').value = p.notes;
        tempImgBase64 = p.img;
        document.getElementById('img-preview-box').innerHTML = p.img ? `<img src="${p.img}" class="detail-img">` : "";
        document.getElementById('del-btn').style.display = 'block';
        document.getElementById('modal').style.display = 'block';
    }

    function previewImg(input) {
        if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = function(e) {
                tempImgBase64 = e.target.result;
                document.getElementById('img-preview-box').innerHTML = `<img src="${tempImgBase64}" class="detail-img">`;
            };
            reader.readAsDataURL(input.files[0]);
        }
    }

    function saveData() {
        const data = {
            id: editingId || Date.now(),
            title: document.getElementById('m-title').value || "æœªå‘½å",
            type: document.getElementById('m-type').value,
            steps: document.getElementById('m-steps').value,
            notes: document.getElementById('m-notes').value,
            img: tempImgBase64
        };

        if (editingId) {
            const index = projects.findIndex(p => p.id === editingId);
            projects[index] = data;
        } else {
            projects.push(data);
        }

        localStorage.setItem('knit_db_v3', JSON.stringify(projects));
        closeModal();
        renderWall();
    }

    function deleteData() {
        if(confirm("ç¢ºå®šè¦åˆªé™¤å—ï¼Ÿæ­¤å‹•ä½œç„¡æ³•å¾©åŸã€‚")) {
            projects = projects.filter(p => p.id !== editingId);
            localStorage.setItem('knit_db_v3', JSON.stringify(projects));
            closeModal();
            renderWall();
        }
    }

    function closeModal() { document.getElementById('modal').style.display = 'none'; }

    renderWall();
</script>

</body>
